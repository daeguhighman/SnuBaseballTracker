{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",

    "paths": {
      "@/*": ["src/*"],
      "@teams/*": ["src/teams/*"],
      "@players/*": ["src/players/*"],
      "@users/*": ["src/users/*"],
      "@records/*": ["src/records/*"],
      "@tournaments/*": ["src/tournaments/*"],
      "@games/*": ["src/games/*"],
      "@umpires/*": ["src/umpires/*"],
      "@mail/*": ["src/mail/*"],
      "@auth/*": ["src/auth/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@admin/*": ["src/admin/*"]
    },

    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  }
}
